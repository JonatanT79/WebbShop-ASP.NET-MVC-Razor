@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<b>NOTE, Your Name is ONLY used to make sure we send the ordered products to the right person.</b>
<br />
<b>Phonenumber is used to contact you if there is any errors or delays on your order.</b>
<br />
<b>To delete/change your information, modify the text in the textbox and press 'Save' (leave the textbox empty to delete it completely).</b>
<br />

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>

            <label>Firstname</label>
            <input class="form-control" name="Firstname" value="@Html.DisplayFor(Info => Model.userAddress.FirstName)" />
            <br />
            <label>Lastname</label>
            <input class="form-control" name="Lastname" value="@Html.DisplayFor(Info => Model.userAddress.LastName)" />
            <br />

            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" style="float:left" class="btn btn-primary">Save</button>
            <a id="Confirm-Delete" class="btn btn-danger" style="float:right">Delete Account</a>
        </form>
    </div>
</div>

<script src="~/js/DeleteAlert.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}